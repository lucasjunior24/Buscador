@inject Microsoft.AspNetCore.Hosting.IWebHostEnvironment hostingEnv

<!DOCTYPE html>
<html lang="pt-br" class="green-theme">
<head>
    <meta charset="utf-8" />
    <meta name="description" content="Buscador de prestadores de serviço. Informações sobre prestadores de serviço para todo o estado" />

    <!--Responsive-->
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!--PWA-->
    <link rel="apple-touch-icon" href="~/images/icons/ic_launcher_180.png">
    <meta name="theme-color" content="#00c177" />

    <!--Title-->
    <title>@ViewData["Title"] - Buscador de prestadores de serviço</title>

    <!--Manifest-->
    <link rel="manifest" href="/manifest.json" />

    <!-- Roboto fonts CSS -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&amp;display=swap" rel="stylesheet">

    <!--Mdi Icons-->
    <link href="https://cdn.sistemas.ro.gov.br/vendors/materialdesignicons/css/materialdesignicons.min.css" rel="stylesheet" />

    <!--Bootstrap Core CSS-->
    <link href="https://cdn.sistemas.ro.gov.br/vendors/bootstrap/v5/css/bootstrap.min.css" rel="stylesheet">

    <!--Swiper CSS-->
    <link href="~/vendor/swiper/css/swiper.min.css" rel="stylesheet" />
    <link href="~/css/swiper.css" rel="stylesheet" />

    <!-- Sweet Alert -->
    <link href="https://cdn.sistemas.ro.gov.br/vendors/sweetalert/sweetalert2.min.css" rel="stylesheet" />

    <!--Custom CSS-->
    <link href="~/css/app.css" rel="stylesheet" />

    <!-- Another CSS -->
    @RenderSection("Pagestyles", required: false)
</head>
<body>
    @*<partial name="_MediaQuery" />*@

    <!--Sidebar-->
    <partial name="_Sidebar" />

    <div class="wrapper">
        <partial name="_Header" />

        <div class="container">
            @RenderBody()
            <partial name="_Footer" />
        </div>

        <footer>
            <partial name="_MenuFooterMobile" />
        </footer>
    </div>

    <!--Service-Worker-->
    <script>navigator.serviceWorker.register('service-worker.js');</script>

    <!--Bootstrap Core JavaScript-->
    <script src="https://cdn.sistemas.ro.gov.br/vendors/bootstrap/v5/js/bootstrap.bundle.min.js"></script>

    <!--Jquery-->
    <script src="https://cdn.sistemas.ro.gov.br/vendors/jquery/jquery-3.5.1.min.js"></script>
    <script src="~/vendor/cookie/jquery.cookie.js"></script>

    <!-- Sweetalert JS -->
    <script src="https://cdn.sistemas.ro.gov.br/vendors/sweetalert/sweetalert2.min.js" integrity="sha384-XC5I7l8BpDWzd1oNwuYTY9tTlxO7QePEuRkq+UyAumtDPvALFJPXVhzjBJXMdLVD" crossorigin="anonymous"></script>

    <!--Swiper JS-->
    <script src="vendor/swiper/js/swiper.min.js"></script>
    <script src="~/js/swiper.js"></script>

    <!-- V-Libras -->
    <div vw class="enabled d-none d-md-block">
        <div vw-access-button class="active"></div>
        <div vw-plugin-wrapper>
            <div class="vw-plugin-top-wrapper"></div>
        </div>
    </div>
    <script src="https://vlibras.gov.br/app/vlibras-plugin.js"></script>
    <script>
        new window.VLibras.Widget('https://vlibras.gov.br/app');
    </script>

    <!--Custom JS-->
    <script src="~/js/app.js"></script>

    <!--Another JS-->
    @RenderSection("Scripts", required: false)
</body>
</html>
