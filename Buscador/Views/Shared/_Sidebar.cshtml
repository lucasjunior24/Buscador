@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager


<div class="sidebar">
    <div class="mt-4 mb-3">
        <div class="row">
            <div class="col pl-0 align-self-center">
                <img src="~/images/logo/portaldocidadao_logotxt_branco_horizontal.svg" alt="Logótipo Portal do Cidadão" />
            </div>
        </div>
    </div>
    <hr class="text-white" />
    @*@await Component.InvokeAsync("Sidebar")*@
    <hr class="text-white" />
    <div class="row">
        <div class="list-group main-menu">
            @if (SignInManager.IsSignedIn(User))
            {
                <a id="manage" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage" class="list-group-item list-group-item-action"><em class="mdi mdi-cog icons-raised" aria-label="Ícone Tipo de Serviços"></em>Olár @UserManager.GetUserName(User)!</a>
                <a asp-action="ObterTrabalhador" asp-route-userId="@UserManager.GetUserId(User)"><em class="mdi mdi-cog icons-raised"  aria-label="Ícone Detalhes"></em>Meu Perfil</a>

                <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">

                    <button id="logout" type="submit" class="list-group-item list-group-item-action"><em class="mdi mdi-cog icons-raised" aria-label="Ícone Tipo de Serviços"></em>Logout</button>
                </form>

            }
            else
            {
                <a id="register" asp-area="Identity" asp-page="/Account/Register" class="list-group-item list-group-item-action"><em class="mdi mdi-cog icons-raised" aria-label="Ícone Tipo de Serviços"></em>Cadastrar-se</a>
                <a id="login" asp-area="Identity" asp-page="/Account/Login" class="list-group-item list-group-item-action"><em class="mdi mdi-cog icons-raised" aria-label="Ícone Tipo de Serviços"></em>Login</a>
            }
            <br />
            <a asp-controller="Home" asp-action="Index" class="list-group-item list-group-item-action active h-16px"><em class="mdi mdi-home icons-raised" aria-label="Ícone Início"></em>Início</a>
            @*<a asp-controller="Servico" asp-action="Index" class="list-group-item list-group-item-action"><em class="mdi mdi-hammer-wrench icons-raised" aria-label="Ícone Serviços"></em>Serviços</a>*@
            <a asp-controller="Servico" asp-action="Acompanhar" class="list-group-item list-group-item-action"><em class="mdi mdi-animation icons-raised" aria-label="Ícone Acompanhamentos"></em>Acompanhamentos</a>
            <a asp-controller="Trabalhadores" asp-action="Index" class="list-group-item list-group-item-action"><em class="mdi mdi-cog icons-raised" aria-label="Ícone Trabalhadores"></em>Trabalhadores</a>
            <a asp-controller="TiposDeServicos" asp-action="Index" class="list-group-item list-group-item-action"><em class="mdi mdi-cog icons-raised" aria-label="Ícone Tipo de Serviços"></em>Tipo de Serviços</a>
        </div>
    </div>
</div>
<a href="javascript:void(0)" class="closesidemenu"><em class="icons-raised bg-dark mdi mdi-close h3" aria-label="Fechar Menu"></em></a>

