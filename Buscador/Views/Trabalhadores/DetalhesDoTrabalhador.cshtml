@model Buscador.Models.ViewModels.TrabalhadorViewModel

@{
    ViewData["Title"] = "Detalhes sobre o Trabalhador";
}

<div class="d-none d-sm-block">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home" class="color-theme"><em class="mdi mdi-home"></em> Início</a></li>
            <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Trabalhadores" class="color-theme">Lista de Trabalhadores</a></li>
            <li class="breadcrumb-item active color-theme" aria-current="page">@ViewData["Title"]</li>
        </ol>
    </nav>
</div>
<div class="d-sm-none">
    <a asp-action="Index" asp-controller="Trabalhadores" aria-label="Botão Início"><em class="mdi mdi-chevron-left h1"></em> Lista de Trabalhadores</a>
</div>

<hr />

<div class="row">
    <div class="col-md-8 col-lg-9 col-xxl-10">
        <h3>@Model.Profissao</h3>
        <div class="mb-2">
            <small class="h6">Avaliação: <strong>Sem Avaliação</strong></small>
        </div>
    </div>
    <div class="col-md-4 col-lg-3 col-xxl-2">
        <div class="d-grid mx-auto mb-3">
            <a class="btn text-center text-white bg-theme p-18 pt-3 pb-3" onclick="mostrarModal()">
                Solicitar
            </a>
        </div>
    </div>
</div>
<hr />


<div class="row">
    <div class="col-md-4 pt-1">
        <div class="card mb-2 pt-2">
            <div class="card-body">
                <div class="row">
                    <div class="col-3 col-sm-4 col-md-12">
                        <div class="d-flex justify-content-center align-items-center">
                            <img src="~/imagens/@Model.Foto" alt="@Model.Foto" style="width: 100%; height: 100%; border-radius: 50%;" class="" />
                        </div>
                    </div>
                    <div class="col-9 col-sm-8 col-md-12 p-sm-3">
                        <small class="text-muted">@Html.DisplayNameFor(model => Model.Nome)</small>
                        <h4>@Model.Nome</h4>
                    </div>
                    <div class="col p-sm-3">
                        <div class="d-grid gap-2 pt-2">
                            <h6>Alguem que busca sempre ser melhor</h6>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-8 pt-1">
        <div class="card mb-2 pt-2">
            <div class="card-body">
                <div class="row">
                    <div class="col-12 border-left-theme border-3">
                        <div class="border-bottom-theme border-1">
                            <small class="text-muted">@Html.DisplayNameFor(model => Model.Profissao)</small>
                            <h3>@Model.Profissao</h3>
                        </div>
                    </div>
                    <div class="col-12 border-left-theme border-3 pt-2">
                        <div class="border-1">
                            <small class="text-muted">@Html.DisplayNameFor(model => Model.Descricao)</small>
                            <h6>@Model.Descricao</h6>
                        </div>
                    </div>
                    <div class="col-12 border-left-theme border-3 pt-2">
                        <small class="text-muted">@Html.DisplayNameFor(model => Model.CursoOuFormaçao)</small>
                        <h6>@Model.CursoOuFormaçao</h6>
                    </div>
                    <div class="col-md-6 pt-1">
                        <small class="text-muted">@Html.DisplayNameFor(model => Model.Email)</small>
                        <h6>@Model.Email</h6>
                    </div>
                    <div class="col-md-6 pt-1">
                        <small class="text-muted">@Html.DisplayNameFor(model => Model.TempoExperiencia)</small>
                        <h6>@Model.TempoExperiencia</h6>
                    </div>

                    <div class="col-6 col-xl-3 col-md-6 pt-1">
                        <small class="text-muted">@Html.DisplayNameFor(model => Model.Telefone)</small>
                        <h6>@Model.Telefone</h6>
                    </div>
                    <div class="col-6 col-xl-3 col-md-6 pt-1">
                        <small class="text-muted">@Html.DisplayNameFor(model => Model.TipoDeTrabalhador)</small>
                        <h6>@Model.TipoDeTrabalhador</h6>
                    </div>
                    <div class="col-6 col-xl-3 col-md-6 pt-1">
                        <small class="text-muted">@Html.DisplayNameFor(model => Model.Profissao)</small>
                        <h6>@Model.Profissao</h6>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



<div class="modal fade" id="exampleModal" tabindex="1" aria-labelledby="exemploModal" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="exemploModal">Solicitar Trabalhador</h4>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true" x></span>
                </button>

            </div>

            <form asp-controller="Solicitacao" asp-action="Create" asp-route-trabalhadorId="@Model.Id">
                <div class="modal-body">
                    <div class="row">
                        <div class="col-6">
                            <div class="d-flex justify-content-center align-items-center">
                                <img src="~/imagens/@Model.Foto" alt="@Model.Foto" style="width: 100%; height: 100%; border-radius: 50%;" class="" />
                            </div>
                        </div>

                        <div class="col-6">
                            <div class="col">
                                <small class="text-muted">@Html.DisplayNameFor(model => Model.Profissao)</small>
                                <h5>@Model.Profissao</h5>
                            </div>
                            <div class="col ">
                                <small class="text-muted">@Html.DisplayNameFor(model => Model.Nome)</small>
                                <h6>@Model.Nome</h6>
                            </div>
                        </div>
                    </div>
                </div>
        
                <div class="modal-footer">
                    <div class="justify-content-end">
                        <input type="submit" value="Solicitar Trabalhador" class="btn btn-outline-success" />

                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fechar</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        function mostrarModal() {
            var myModal = document.getElementById('exampleModal')
            let minhaModal = new bootstrap.Modal(myModal);
            minhaModal.show();
        }

    </script>
}

