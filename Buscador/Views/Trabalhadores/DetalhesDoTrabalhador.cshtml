@model Buscador.Models.ViewModels.TrabalhadorViewModel

@{
    ViewData["Title"] = "Detalhes sobre o Trabalhador";
}

<div class="d-none d-sm-block">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home" class="color-theme"><em class="mdi mdi-home"></em> Início</a></li>
            <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Trabalhadores" class="color-theme">Lista de Trabalhadores</a></li>
            <li class="breadcrumb-item active color-theme" aria-current="page">@ViewData["Title"]</li>
        </ol>
    </nav>
</div>
<div class="d-sm-none">
    <a asp-action="Index" asp-controller="Trabalhadores" aria-label="Botão Início"><em class="mdi mdi-chevron-left h1"></em> Lista de Trabalhadores</a>
</div>

<hr />

<div class="row">
    <div class="col-md-8 col-lg-9 col-xxl-10">
        <h3>@Model.Profissao</h3>
        <div class="mb-2">
            <small class="h6">Avaliação: <strong>Sem Avaliação</strong></small>
        </div>
    </div>
    <div class="col-md-4 col-lg-3 col-xxl-2">
        <div class="d-grid mx-auto mb-3">
            <a class="btn text-center text-white bg-theme p-18 pt-3 pb-3" onclick="mostrarModal()">
                Solicitar
            </a>
        </div>
    </div>
</div>
<hr />

<div class="row">
    <div class="col-md-4 pt-1">
        <div class="card mb-2 pt-2">
            <div class="card-body">
                <div class="row">
                    <div class="col-3 col-sm-4 col-md-12">
                        <div class="d-flex justify-content-center align-items-center">
                            <img src="~/imagens/@Model.Foto" alt="@Model.Foto" style="width: 100%; height: 100%; border-radius: 50%;" class="" />
                        </div>
                    </div>
                    <div class="col-9 col-sm-8 col-md-12 p-sm-3">
                        <small class="text-muted">@Html.DisplayNameFor(model => Model.Nome)</small>
                        <h4>@Model.Nome</h4>
                    </div>
                    <div class="col p-sm-3">
                        <div class="d-grid gap-2 pt-2">
                            <h6>Alguem que busca sempre ser melhor</h6>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-8 pt-1">
        <div class="card mb-2 pt-2">
            <div class="card-body">
                <div class="row">
                    <div class="col-12 border-left-theme border-3">
                        <div class="border-bottom-theme border-1">
                            <small class="text-muted">@Html.DisplayNameFor(model => Model.Profissao)</small>
                            <h3>@Model.Profissao</h3>
                        </div>
                    </div>
                    <div class="col-12 border-left-theme border-3 pt-2">
                        <div class="border-1">
                            <small class="text-muted">@Html.DisplayNameFor(model => Model.Descricao)</small>
                            <h6>@Model.Descricao</h6>
                        </div>
                    </div>
                    <div class="col-12 border-left-theme border-3 pt-2">
                        <small class="text-muted">@Html.DisplayNameFor(model => Model.CursoOuFormaçao)</small>
                        <h6>@Model.CursoOuFormaçao</h6>
                    </div>
                    <div class="col-6 col-xl-3 col-md-6 pt-1">
                        <small class="text-muted">@Html.DisplayNameFor(model => Model.Email)</small>
                        <h6>@Model.Email</h6>
                    </div>
                    <div class="col-6 col-xl-3 col-md-6 pt-1">
                        <small class="text-muted">@Html.DisplayNameFor(model => Model.TempoExperiencia)</small>
                        <h6>@Model.TempoExperiencia</h6>
                    </div>

                    <div class="col-6 col-xl-3 col-md-6 pt-1">
                        <small class="text-muted">@Html.DisplayNameFor(model => Model.Telefone)</small>
                        <h6>@Model.Telefone</h6>
                    </div>
                    <div class="col-6 col-xl-3 col-md-6 pt-1">
                        <small class="text-muted">@Html.DisplayNameFor(model => Model.TipoDeTrabalhador)</small>
                        <h6>@Model.TipoDeTrabalhador</h6>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>



<div class="modal fade" id="exampleModal" tabindex="1" aria-labelledby="exemploModal" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="exemploModal">Selecione o tipo de atendimento</h4>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true" x></span>
                </button>
            </div>
            <div class="modal-body">
                <div>
                    <div class="row">
                        <div class="col-4">
                            <div class="d-flex justify-content-center align-items-center">
                                <img src="~/imagens/@Model.Foto" alt="@Model.Foto" style="width:100%; height: 100%; border-radius: 50%;" class="" />
                            </div>
                        </div>

                        <div class="col-8">
                            <div class="col">
                                <small class="text-muted">@Html.DisplayNameFor(model => Model.Profissao)</small>
                                <h6>@Model.Profissao</h6>
                            </div>
                            <div class="col ">
                                <small class="text-muted">@Html.DisplayNameFor(model => Model.Nome)</small>
                                <h6>@Model.Nome</h6>
                            </div>
                        </div>
                    </div>
                    <div class="row row-cols-1 row-cols-lg-2 row-cols-md-2 row-cols-sm-2">
                        <a @*asp-action="ExibirUnidadesDisponiveis" asp-controller="Agendamento" asp-route-servicoid="@Model.Id"*@ onclick="mostrarModalAgende()">
                            <div class="col p-2" id="action-presencial">
                                <div class="card-tipoDeAtendimento text-secondary">
                                    <div class="align-self-center">
                                        <em class="mdi mdi-city" aria-label="Presencial"></em>
                                        <h5>Presencial</h5>
                                        <small class="card-text">Agendamento para atendimento presencial</small>
                                    </div>
                                </div>
                            </div>
                        </a>

                        <div class="col p-2" id="action-online">
                            <form asp-controller="Solicitacao" asp-action="Create" asp-route-trabalhadorId="@Model.Id">
                                <button type="submit" class="border-0">
                                    <div class="card-tipoDeAtendimento">
                                        <div class="align-self-center">
                                            <em class="mdi mdi-laptop-windows" aria-label="Online"></em>
                                            <h5>Online</h5>
                                            <small class="card-text">Solicitação para atendimento online</small>
                                        </div>
                                    </div>
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <div class="justify-content-end">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fechar</button>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="modal fade" id="agendeModal" tabindex="1" aria-labelledby="agendeModal" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="agendeModal">Agendar encontro presencial</h4>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true" x></span>
                </button>

            </div>

            <form asp-controller="Agendamento" asp-action="Create" asp-route-trabalhadorId="@Model.Id">
                <div class="modal-body">
                    <div class="agendador-date">
                        <div class="contianer">
                            <div class="calendar">
                                <div class="calendar-header">

                                    <span class="month-picker" id="month-picker"> May </span>

                                    <div class="year-picker" id="year-picker">
                                        <span class="year-change" id="pre-year">
                                            <span class="text-center"><</span>
                                        </span>
                                        <span id="year">2020 </span>
                                        <span class="year-change" id="next-year">
                                            <span class="align-text-bottom">></span>
                                        </span>
                                    </div>
                                </div>

                                <div class="calendar-body">
                                    <div class="calendar-week-days">
                                        <div>Dom</div>
                                        <div>Seg</div>
                                        <div>Ter</div>
                                        <div>Qua</div>
                                        <div>Qui</div>
                                        <div>Sex</div>
                                        <div>Sab</div>
                                    </div>
                                    <div class="calendar-days">
                                    </div>
                                </div>
                                <div class="calendar-footer">
                                </div>
                                <div class="date-time-formate">
                                    <div class="day-text-formate">Hoje</div>
                                    <div class="date-time-value">
                                        <div class="time-formate">02:51:20</div>
                                        <div class="date-formate">23 - july - 2022</div>
                                    </div>
                                </div>
                                <div class="month-list mt-2 mb-0">

                                </div>
                                <div class="calendar-header d-flex justify-content-center align-items-center m-0 px-2">
                                    <h5 class="m-0 dia-agendado-date" id="dia-selecionado-teste">Escolha uma data</h5>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <div class="justify-content-end">
                        <input type="submit" value="Confirmar agendamento" class="btn btn-outline-success" />
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fechar</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        function mostrarModal() {
            var myModal = document.getElementById('exampleModal')
            let minhaModal = new bootstrap.Modal(myModal);
            minhaModal.show();
        }
        function mostrarModalAgende() {
            var agendeModal = document.getElementById('agendeModal')
            let minhaAgendeModal = new bootstrap.Modal(agendeModal);
            minhaAgendeModal.show();
        }
    </script>

    <script src="~/js/agendamento/index.js"></script>
}

<link href="~/css/agendamento/index.css" rel="stylesheet" />
