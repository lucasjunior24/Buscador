@model Buscador.ViewModels.TrabalhadorViewModel


@{
    ViewData["Title"] = "Minhas Informações";
}


<div class="d-none d-sm-block">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home" class="color-theme"> Inicio</a></li>
            <li class="breadcrumb-item active" aria-current="page"> Minhas Informações</li>
        </ol>
    </nav>
</div>
<div class="d-sm-none">
    <a asp-action="Index" asp-controller="Home" aria-label="Botão Início"><em class="mdi mdi-chevron-left h1"></em> Inicio</a>
</div>
<hr />

<div class="row mt-3 mb-3">
    <div class="col-3">
        <a class="btn btn-secondary" asp-controller="Home" asp-action="Index">Voltar</a>
    </div>
</div>
<div class="mb-3">
    <span class="text-mute">Seja bem-vindo(a), </span><span><strong>@Model.Nome</strong></span>
</div>
<div class="row">
    <div class="col-md-4 pt-1">
        <div class="card mb-2 pt-2">
            <div class="card-body">
                <div class="row">
                    <div class="col-3 col-sm-4 col-md-12">
                        <div class="d-flex justify-content-center align-items-center">
                            <img src="~/imagens/@Model.Foto" alt="@Model.Foto" style="width: 100%; height: 100%; border-radius: 50%;" class="" />
                        </div>
                    </div>
                    <div class="col-9 col-sm-8 col-md-12 p-sm-3">
                        <h6>Você pode atualizadar ou remover seu perfil a qualquer momento</h6>
                        <p class="text-mute">Para melhor experiencia matenha seus dados atualizados.</p>
                    </div>
                    <div class="col p-sm-3">
                        <div class="d-grid gap-2 pt-2">
                            <button type="button" class="btn btn-warning mb-1" onclick="mostrarModalEditarTrabalhador()">
                                <em class="mdi mdi-pencil h5" aria-label="Ícone Editar"></em> Editar
                            </button>

                            <button type="button" class="btn btn-danger mb-1" onclick="mostrarModalExcluirTrabalhador()">
                                <em class="mdi mdi-delete-forever h5" aria-label="Ícone Excluir"></em> Excluir
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-8 pt-1">
        <div class="card mb-2 pt-2">
            <div class="card-body">
                <div class="row">
                    <div class="col-6 col col-xl-3 col-md-6 pt-1">
                        <small class="text-muted">@Html.DisplayNameFor(model => Model.Nome)</small>
                        <h6>@Model.Nome</h6>
                    </div>
                    <div class="col-6 col-xl-3 col-md-6 pt-1">
                        <small class="text-muted">@Html.DisplayNameFor(model => Model.Documento)</small>
                        <h6>@Model.Documento</h6>
                    </div>
                    <div class="col-6 col-xl-3 col-md-6 pt-1">
                        <small class="text-muted">@Html.DisplayNameFor(model => Model.Email)</small>
                        <h6>@Model.Email</h6>
                    </div>

                    <div class="col-6 col-xl-3 col-md-6 pt-1">
                        <small class="text-muted">@Html.DisplayNameFor(model => Model.Telefone)</small>
                        <h6>@Model.Telefone</h6>
                    </div>
                    <div class="col-6 col-xl-3 col-md-6 pt-1">
                        <small class="text-muted">@Html.DisplayNameFor(model => Model.TipoDeTrabalhador)</small>
                        <h6>@Model.TipoDeTrabalhador</h6>
                    </div>
                    <div class="col-6 col-xl-3 col-md-6 pt-1">
                        <small class="text-muted">@Html.DisplayNameFor(model => Model.Profissao)</small>
                        <h6>@Model.Profissao</h6>
                    </div>
                </div>
            </div>
        </div>
        <div class="card mb-2 pt-2">
            <div class="card-body">
                <div class="row mt-3">
                    <div class="mb-3">
                        <h4 class="text-mute">Endereço do trabalhador</h4>
                    </div>
                    <div class="col-md-4 mt-0">
                        <small class="text-muted">@Html.DisplayNameFor(model => Model.EnderecoTrabalhador.Logradouro)</small>
                        <h6>@Model.EnderecoTrabalhador.Logradouro</h6>
                    </div>
                    <div class="col-md-4 mt-0">
                        <small class="text-muted">@Html.DisplayNameFor(model => Model.EnderecoTrabalhador.Cidade)</small>
                        <h6>@Model.EnderecoTrabalhador.Cidade</h6>
                    </div>
                    <div class="col-md-4 mt-0">
                        <small class="text-muted">@Html.DisplayNameFor(model => Model.EnderecoTrabalhador.Numero)</small>
                        <h6>@Model.EnderecoTrabalhador.Numero</h6>
                    </div>
                    <div class="col-md-4 mt-0">
                        <small class="text-muted">@Html.DisplayNameFor(model => Model.EnderecoTrabalhador.Cep)</small>
                        <h6>@Model.EnderecoTrabalhador.Cep</h6>
                    </div>
                    <div class="col-md-4 mt-0">
                        <small class="text-muted">@Html.DisplayNameFor(model => Model.EnderecoTrabalhador.Complemento)</small>
                        <h6>@Model.EnderecoTrabalhador.Complemento</h6>
                    </div>
                    <div class="col-md-4">
                        <div class="d-grid justify-content-center">
                            <button type="button" class="btn btn-warning mb-1" onclick="mostrarModal()">
                                <em class="mdi mdi-pencil h5" aria-label="Ícone Editar"></em> Editar Endereço
                            </button>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>



<div class="modal fade" id="editarTrabalhador" tabindex="1" aria-labelledby="editarTrabalhador" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="editarTrabalhador">Atualizar dados:</h4>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true" x></span>
                </button>
            </div>
            <form asp-action="EditarDadosDoTrabalhador">
                <partial name="_EditarTrabalhador" />
            </form>
        </div>
    </div>
</div>


<partial name="Delete" />

<div class="modal fade" id="exampleModal" tabindex="1" aria-labelledby="exemploModal" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="exemploModal">Atualizar endereço</h4>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true" x></span>
                </button>

            </div>

            <form asp-action="AtualizarEndereco">
                <div class="modal-body">
                    <input type="hidden" asp-for="EnderecoTrabalhador.TrabalhadorId" />
                    <input type="hidden" asp-for="UserId" />
                    <input type="hidden" asp-for="EnderecoTrabalhador.Id" />

                    <div class="form-group">
                        <label asp-for="EnderecoTrabalhador.Cep" class="control-label"></label>
                        <input asp-for="EnderecoTrabalhador.Cep" class="form-control" />
                        <span asp-validation-for="EnderecoTrabalhador.Cep" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="EnderecoTrabalhador.Logradouro" class="control-label"></label>
                        <input asp-for="EnderecoTrabalhador.Logradouro" class="form-control Rua" />
                        <span asp-validation-for="EnderecoTrabalhador.Logradouro" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="EnderecoTrabalhador.Numero" class="control-label"></label>
                        <input asp-for="EnderecoTrabalhador.Numero" class="form-control" />
                        <span asp-validation-for="EnderecoTrabalhador.Numero" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="EnderecoTrabalhador.Complemento" class="control-label"></label>
                        <input asp-for="EnderecoTrabalhador.Complemento" class="form-control" />
                        <span asp-validation-for="EnderecoTrabalhador.Complemento" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="EnderecoTrabalhador.Bairro" class="control-label"></label>
                        <input asp-for="EnderecoTrabalhador.Bairro" class="form-control Bairro" />
                        <span asp-validation-for="EnderecoTrabalhador.Bairro" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="EnderecoTrabalhador.Cidade" class="control-label"></label>
                        <input asp-for="EnderecoTrabalhador.Cidade" class="form-control Municipio" />
                        <span asp-validation-for="EnderecoTrabalhador.Cidade" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="EnderecoTrabalhador.Estado" class="control-label"></label>
                        <input asp-for="EnderecoTrabalhador.Estado" class="form-control Uf" />
                        <span asp-validation-for="EnderecoTrabalhador.Estado" class="text-danger"></span>
                    </div>
                </div>
                <div class="modal-footer">
                    <div class="justify-content-end">
                        <input type="submit" value="Atualizar Endereço" class="btn btn-outline-success" />

                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fechar</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        function mostrarModal() {
            var myModal = document.getElementById('exampleModal')
            let minhaModal = new bootstrap.Modal(myModal);
            minhaModal.show();
        }

        function mostrarModalEditarTrabalhador() {
            var editarTrabalhadorModal = document.getElementById('editarTrabalhador')
            let minhaModal = new bootstrap.Modal(editarTrabalhadorModal);
            minhaModal.show();
        }

        function mostrarModalExcluirTrabalhador() {
            var editarTrabalhadorModal = document.getElementById('excluirTrabalhador')
            let minhaModal = new bootstrap.Modal(editarTrabalhadorModal);
            minhaModal.show();
        }
    </script>
}
