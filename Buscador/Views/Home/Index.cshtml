@model Buscador.ViewModels.TrabalhadorViewModel
@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@{
    ViewData["Title"] = "Início";
}

<div class="col-md-12 paginacomswiper">
    <form asp-action="BuscarServicos" asp-controller="Servico" id="formularioBusca">
        <div class="card card-body">
            <div class="row">
                <div class="col-12 d-none d-lg-block vertical-align mb-2">
                    <h5 class="m-0">Reunimos em um só lugar os melhores prestadores de serviço para voçê</h5>
                </div>
                <div class="col-lg-12 col-md-12">
                    <div class="input-group">
                        <input id="inputPesquisa" required minlength="3" name="busca" placeholder="O que você está procurando? " autocomplete="off" data-url="@Url.Action("Buscar", "Servico")" class="form-control" />
                        <button class="btn-buscar" arial-label="Botão Buscar"><em class="mdi mdi-magnify" arial-label="Ícone Botão Buscar"></em></button>
                    </div>
                    <ul id="resultadoDaPesquisa" class="list-group w-100"></ul>
                </div>
            </div>
        </div>
    </form>
</div>
<div class="col">
    <div class="row mt-5">
        <div class="col-xl-6 mt-2">
            <div class="d-flex justify-content-center align-items-center p-3">
                <img class="img-fluid"  src="~/images/landing.svg" />
            </div>
        </div>
        <div class="col-xl-6 mb-3 pl-3 mt-3">
            <h1 class="text-start color-theme p-4 mt-5"><strong>Ache o Profissional que você está procurando</strong></h1>
        </div>
    </div>
</div>

<div class="mb-5">
    <h6 class="subtitle mt-5">Mais acessados</h6>
    <div class="row mt-2">
        <div class="container px-0 d-flex justify-content-center ">
            <!-- Swiper -->
            <div class="swiper-container offer-slide">
                <div class="swiper-wrapper">
                    <div class="swiper-slide">
                        <div class="card border-0">
                            <div class="card-body">
                                <div class="row h-100">
                                    <div class="col-auto pr-0">
                                        <div class="avatar avatar-60 no-shadow border-0">
                                            <div class="overlay gradient-success"></div>
                                            <em class="mdi mdi-police-badge color-theme h3" aria-label="defesa civil"></em>
                                        </div>
                                    </div>
                                    <div class="col">
                                        <p>MARIA DA PENHA<br><small class="text-secondary">PC-RO</small></p>
                                        <p class="text-secondary text-mute small">Denunciar agressão</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="swiper-slide">
                        <div class="card border-0">
                            <div class="card-body">
                                <div class="row h-100">
                                    <div class="col-auto pr-0">
                                        <div class="avatar avatar-60 no-shadow border-0">
                                            <div class="overlay gradient-success"></div>
                                            <em class="mdi mdi-police-badge color-theme h3" aria-label="defesa civil"></em>
                                        </div>
                                    </div>
                                    <div class="col">
                                        <p>ALERTA CELULAR<br><small class="text-secondary">Defesa Civil</small></p>
                                        <p class="text-secondary text-mute small">Solicitar alerta para celular</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="swiper-slide">
                        <div class="card border-0">
                            <div class="card-body">
                                <div class="row h-100">
                                    <div class="col-auto pr-0">
                                        <div class="avatar avatar-60 no-shadow border-0">
                                            <div class="overlay gradient-success"></div>
                                            <em class="mdi mdi-police-badge color-theme h3" aria-label="defesa civil"></em>
                                        </div>
                                    </div>
                                    <div class="col">
                                        <p>DELEGACIA VIRTUAL<br><small class="text-secondary">PC-RO</small></p>
                                        <p class="text-secondary text-mute small">Abrir boletim de ocorrência</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="swiper-slide">
                        <div class="card border-0">
                            <div class="card-body">
                                <div class="row h-100">
                                    <div class="col-auto pr-0">
                                        <div class="avatar avatar-60 no-shadow border-0">
                                            <div class="overlay gradient-success"></div>
                                            <em class="mdi mdi-briefcase-search color-theme h3" aria-label="emprego"></em>
                                        </div>
                                    </div>
                                    <div class="col">
                                        <p>VAGA ESTÁGIO<br><small class="text-secondary">SRTRO</small></p>
                                        <p class="text-secondary text-mute small">Concorrer a vaga de estágio</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="swiper-slide">
                        <div class="card border-0">
                            <div class="card-body">
                                <div class="row h-100">
                                    <div class="col-auto pr-0">
                                        <div class="avatar avatar-60 no-shadow border-0">
                                            <div class="overlay gradient-success"></div>
                                            <em class="mdi mdi-microscope color-theme h3" aria-label="saude"></em>
                                        </div>
                                    </div>
                                    <div class="col">
                                        <p>ÓTICA - LENTES<br><small class="text-secondary">SESAU</small></p>
                                        <p class="text-secondary text-mute small">Solicitar lente de contato</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="swiper-pagination"></div>
        </div>
    </div>
</div>
<br />
@if (SignInManager.IsSignedIn(User))
{
    @if ((User.HasClaim(c => c.Type == "trabalhador")) || (User.HasClaim(c => c.Type == "cliente")))
    {
        <br />
    }
    else
    {
        <div class="card card-body">
            <div class="row">
                <div class="col">
                    <h2 class="text-center">Defina seu perfil</h2>
                    <h4 class="text-center">Cadastre seus dados, de acordo com o perfil que você deseja</h4>
                    <div>
                        <h5>
                            <strong>Perfil de Trabalhador</strong> é o de prestador de serviço, pessoa que deseja encontrar clientes e trabalhar. @UserManager.GetUserId(User);
                        </h5>
                        <a asp-controller="Trabalhadores" asp-action="Create" class="btn btn-default">
                            <em class="mdi mdi-cog icons-raised" aria-label="Ícone Trabalhadores"></em>Trabalhadores
                        </a>
                    </div>
                    <div>
                        <h5>
                            <strong>Perfil de Cliente</strong> é o de cidadão, pessoa que buscar um profissional para realizar algum trabalho.
                        </h5>
                        <a asp-controller="Cliente" asp-action="Create" class="btn btn-primary">
                            <em class="mdi mdi-cog icons-raised" aria-label="Ícone Trabalhadores"></em>Cliente
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
}

@section Pagestyles{
    <link href="~/vendor/swiper/css/swiper.min.css" rel="stylesheet" />
    <link href="~/css/inicio/swiper.css" rel="stylesheet" />
    <link href="~/css/servico/buscar.css" rel="stylesheet" />
}

@section Scripts{
    <script src="~/vendor/swiper/js/swiper.min.js"></script>
    <script src="~/js/inicio/swiper.js"></script>
    <script>var urlAction = '@Url.Action("Detalhes", "Servico")';</script>
    <script src="~/js/servico/buscarServico.js"></script>
}