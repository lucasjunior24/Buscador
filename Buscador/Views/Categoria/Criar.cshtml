@model Buscador.ViewModels.CategoriaViewModel
@using Microsoft.AspNetCore.Identity
@inject UserManager<IdentityUser> UserManager


@{
    ViewData["Title"] = "Cadastrar Categoria";
}

<div class="d-none d-sm-block">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home" class="color-theme">Início</a></li>
            <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Categoria" class="color-theme">Lista de Categorias</a></li>
            <li class="breadcrumb-item active" aria-current="page">@ViewData["Title"]</li>
        </ol>
    </nav>
</div>

<div class="d-sm-none">
    <a asp-action="Index" asp-controller="Categoria" aria-label="Lista de Categorias"><em class="mdi mdi-chevron-left h1"></em> Lista de Categorias</a>
</div>
<hr />

<div class="card">
    <div class="card-body">
        <form asp-action="Criar" class="form-horizontal row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Icone" class="control-label"></label>
                <input asp-for="Icone" class="form-control" />
                <span asp-validation-for="Icone" class="text-danger"></span>
            </div>
          

            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-primary" />
                <a class="btn btn-secondary" asp-action="Index">Voltar</a>
            </div>
        </form>
    </div>
</div>
