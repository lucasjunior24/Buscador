@model Buscador.Models.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Fazer Login";
}

<div class="d-none d-sm-block">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home" class="color-theme">Início</a></li>
            <li class="breadcrumb-item active color-theme" aria-current="page" >@ViewData["Title"]</li>
        </ol>
    </nav>
</div>

<div class="d-sm-none">
    <a asp-action="Index" asp-controller="Home" class="breadcrumb-item color-theme">Início</a>
</div>
<hr />

<div class="row mt-md-5">
    <div class="col-md-6 mt-md-5">
        <h1 class="text-start color-theme p-4 mt-md-3"><strong>Ache o Profissional que você está procurando</strong></h1>
    </div>
    <div class="col-md-6 mt-2 mb-5 mt-md-5">
        <div class="card mb-3" style="max-width: 500px">
            <div class="card-body">
                <form asp-action="FazerLogin">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Email" class="form-label"></label>
                        <input asp-for="Email" class="form-control p-2" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password" class="control-label"></label>
                        <input asp-for="Password" class="form-control p-2" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <hr />
                    <div class="d-grid gap-2">
                        <input type="submit" value="Entrar" class="btn btn-lg btn-primary" />
                        <a class="btn btn-lg btn-outline-success" asp-controller="Autenticacao" asp-action="CriarUsuario">Criar Conta</a>
                    </div>
                    <div class="form-group mt-3">
                        <a class="color-theme d-flex align-items-center justify-content-center">
                            <p>Esqueceu a senha?</p>
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}